<div style="text-align: center;margin-top: 20px;">
  <h2>Confirmaci√≥n de datos</h2>
  <h3>Monto: <small class="text-muted">{{data.montoEnPesos}}</small></h3>
</div>
<form class="row g-3">
  <div class="col-12">
    <label for="validationCustom01" class="form-label">Nombre Alumno</label>
    <input type="text" class="form-control" name="nombre_alumno" id="validationCustom01" value={{data.nombre_alumno}}
      disabled>
  </div>
  <div class="col-12">
    <label for="validationCustom02" class="form-label">Rut Alumno</label>
    <input type="text" class="form-control" name="rut_alumno" id="validationCustom02" value={{data.rut_alumno}}
      disabled>

  </div>
  <div class="col-12">
    <label for="validationCustom03" class="form-label">Curso</label>
    <input type="text" class="form-control" name="curso" id="validationCustom03" value={{data.curso}} disabled>
  </div>
  <div class="col-12">
    <label for="validationCustom04" class="form-label">Nombre Apoderado</label>
    <input type="text" class="form-control" name="nombre_apoderado" id="validationCustom04"
      value={{data.nombre_apoderado}} disabled>
  </div>
  <div class="col-12">
    <label for="validationCustom05" class="form-label">Email Apoderado</label>
    <input type="email" class="form-control" name="email_apoderado" id="validationCustom05"
      value={{data.email_apoderado}} disabled>
  </div>
</form>
<form class="row g-3" style="margin-top: 10px;" action={{data.url}} method="POST">
  <input type="hidden" name="token_ws" value={{data.token}} />
  <div class="col-6">
    <a class="btn btn-danger" href="/">Cancelar</a>
  </div>
  <div class="col-6 text-end">
    <button class="btn btn-primary" type="submit">Pagar</button>
  </div>
</form>